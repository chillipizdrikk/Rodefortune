@model RodeFortune.BLL.Dto.PasswordRecoveryRequestDto

@{
    ViewData["Title"] = "Відновлення паролю";
}

<div class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center" style="background-color: #d7c4e9;">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="text-center mb-4">
                <h2 style="color: #5e4376;">Відновлення паролю</h2>
            </div>

            @if (ViewBag.Message != null)
            {
                    <div class="alert alert-success">
                    @ViewBag.Message
                    </div>
            }

            <form asp-action="PasswordRecovery" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <input asp-for="Email" class="form-control form-control-lg rounded-pill" placeholder="Електронна пошта" style="background-color: #f2ebf7;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 position-relative">
                    <input asp-for="NewPassword" class="form-control form-control-lg rounded-pill" type="password" placeholder="Новий пароль" style="background-color: #f2ebf7;" />
                    <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;">
                        <i class="bi bi-eye"></i>
                    </span>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 position-relative">
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-pill" type="password" placeholder="Підтвердити пароль" style="background-color: #f2ebf7;" />
                    <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;">
                        <i class="bi bi-eye"></i>
                    </span>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-lg w-100 rounded-pill" style="background-color: #6a3cb5; border-color: #6a3cb5; color: white;">Відновити пароль</button>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <small><a asp-action="Login" asp-controller="Account" style="color: #6a3cb5;">Повернутися до входу</a></small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            $(document).ready(function() {
                $(".bi-eye").click(function() {
                    var input = $(this).closest(".form-group").find("input");
                    if (input.attr("type") === "password") {
                        input.attr("type", "text");
                        $(this).removeClass("bi-eye").addClass("bi-eye-slash");
                    } else {
                        input.attr("type", "password");
                        $(this).removeClass("bi-eye-slash").addClass("bi-eye");
                    }
                });
            });
        </script>
}