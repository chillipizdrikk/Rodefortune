@model RodeFortune.BLL.Dto.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Відновлення пароля";
}

<div class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center" style="background-color: #d7c4e9;">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="text-center mb-4">
                <h2 style="color: #5e4376;">Відновлення пароля</h2>
            </div>

            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <input asp-for="Email" class="form-control form-control-lg rounded-pill" placeholder="Електронна пошта" style="background-color: #f2ebf7;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-lg w-100 rounded-pill" style="background-color: #6a3cb5; border-color: #6a3cb5; color: white;">Надіслати</button>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <small>Пам'ятаєте пароль?</small>
                    <small><a asp-action="Login" asp-controller="Account" style="color: #6a3cb5;">Увійти</a></small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}