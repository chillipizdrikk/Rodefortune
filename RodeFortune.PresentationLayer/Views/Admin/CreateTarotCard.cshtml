@model RodeFortune.PresentationLayer.Models.TarotCardViewModel

@{
    ViewData["Title"] = "Створення нової карти";
}

<div class="admin-container">
    <h1>Створення нової карти Таро</h1>

    <form asp-action="CreateTarotCard" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Motto"></label>
            <textarea asp-for="Motto" class="form-control"></textarea>
            <span asp-validation-for="Motto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Meaning"></label>
            <textarea asp-for="Meaning" class="form-control"></textarea>
            <span asp-validation-for="Meaning" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Reversal"></label>
            <input type="checkbox" asp-for="Reversal" />
            <span asp-validation-for="Reversal" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Arcana"></label>
            <input asp-for="Arcana" class="form-control" />
            <span asp-validation-for="Arcana" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="imageFile">Зображення</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <div class="form-buttons">
            <button type="submit" class="save-btn">Зберегти</button>
            <a asp-action="TarotCards" class="cancel-btn">Скасувати</a>
        </div>
    </form>
</div>
<style>

    .form-control {
        margin-bottom: 20px;
    }
    .admin-container h1 {
        margin-bottom: 20px;
        font-size: 4rem;
        color: #6f42c1;
    }

    .save-btn {
        background-color: #6f42c1;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        border-radius: 3px;
    }

        .save-btn:hover {
            background-color: #5e35b1;
            text-decoration: none;
            color: white;
        }

    .cancel-btn {
        background-color: #D15658;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        border-radius: 3px;
    }

        .cancel-btn:hover {
            background-color: #C03B3E;
            text-decoration: none;
            color: white;
        }
</style>