@using RodeFortune.DAL.Models
@model (TarotCard Card, bool IsReversed)

@{
    ViewData["Title"] = "Ворожіння Так/Ні";
    string orientation = Model.IsReversed ? "перевернута" : "пряма";

    string yesNoAnswer = GetYesNoAnswer(Model.Card, Model.IsReversed);
    string answerClass = yesNoAnswer.Contains("Так") ? "yes-answer" :
                         yesNoAnswer.Contains("Ні") ? "no-answer" : "maybe-answer";

    string imagePath = $"/images/tarot/{Model.Card.Name.ToLower()}.jpg";
}

<div class="container-fluid tarot-container">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4">Так чи Ні</h1>
            <p class="lead">Швидка відповідь на ваше запитання</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="tarot-reading-card">
                <div class="card-header text-center">
                    <div class="answer-badge @answerClass">
                        <span>@yesNoAnswer</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-5 tarot-card-col">
                            <div class="tarot-card-container @(Model.IsReversed ? "reversed" : "")">
                                @if (imagePath.StartsWith("data:"))
                                {
                                    <img src="@imagePath" class="tarot-card-image" alt="@Model.Card.Name">
                                }
                                else
                                {
                                    <img src="@imagePath" class="tarot-card-image" alt="@Model.Card.Name">
                                }
                            </div>
                        </div>
                        <div class="col-md-7 p-4">
                            <h2 class="card-name">@Model.Card.Name</h2>
                            <div class="card-orientation">@orientation</div>

                            @if (!string.IsNullOrEmpty(Model.Card.Motto))
                            {
                                <div class="card-motto mt-2">
                                    <i>@Model.Card.Motto</i>
                                </div>
                            }

                            <div class="card-meaning mt-3">
                                <h4>Значення:</h4>
                                <p>
                                    @Model.Card.Meaning
                                </p>
                            </div>

                            <div class="card-arcana mt-3">
                                <p><strong>Аркана:</strong> @Model.Card.Arcana</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center p-3">
                    <a href="@Url.Action("YesNo", "Divination")" class="btn btn-primary btn-lg">Нове ворожіння</a>
                    <a href="@Url.Action("Index", "Divination")" class="btn btn-outline-secondary btn-lg ms-2">Інші ворожіння</a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetYesNoAnswer(TarotCard card, bool isReversed)
    {
        if (card.Name.Contains("Wheel of Fortune"))
        {
            return isReversed ? "Скоріше так" : "Так";
        }
        else if (card.Name.Contains("World"))
        {
            return isReversed ? "Можливо так" : "Так";
        }

        // Запасний варіант для інших карт
        return isReversed ? "Невизначено" : "Можливо так";
    }
}

<style>
    .tarot-container {
        background-color: #f5f2f8;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .tarot-reading-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .card-header {
        position: relative;
        background-color: #f9f7fc;
        padding: 2rem 0 1rem;
        border-bottom: 1px solid #eee;
    }

    .answer-badge {
        display: inline-block;
        padding: 0.5rem 2rem;
        font-size: 1.5rem;
        font-weight: bold;
        border-radius: 50px;
        margin-bottom: 1rem;
    }

    .yes-answer {
        background-color: #a8f0c6;
        color: #2c7851;
    }

    .no-answer {
        background-color: #ffd2d2;
        color: #9c3d3d;
    }

    .maybe-answer {
        background-color: #ffeabc;
        color: #96732e;
    }

    .tarot-card-col {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f0ebf7;
        padding: 2rem;
    }

    .tarot-card-container {
        transition: transform 0.5s ease;
        max-width: 240px;
        margin: 0 auto;
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
    }

        .tarot-card-container.reversed {
            transform: rotate(180deg);
        }

    .tarot-card-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .card-name {
        font-size: 1.8rem;
        color: #4a2c82;
        font-weight: bold;
        margin-bottom: 0;
    }

    .card-orientation {
        font-size: 1.1rem;
        color: #8a7da0;
        margin-bottom: 1rem;
        font-style: italic;
    }

    .card-motto {
        color: #6a3cb5;
        font-size: 1.1rem;
    }

    .card-meaning h4 {
        color: #4a2c82;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .card-footer {
        background-color: #f9f7fc;
        border-top: 1px solid #eee;
    }

    .btn-primary {
        background-color: #6a3cb5;
        border-color: #6a3cb5;
    }

        .btn-primary:hover {
            background-color: #542e91;
            border-color: #542e91;
        }

    @@media (max-width: 767px) {
        .tarot-card-col

    {
        padding: 2rem 3rem;
    }

    .tarot-card-container {
        max-width: 180px;
    }

    }
</style>